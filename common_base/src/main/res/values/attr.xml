<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BannerView">
        <!-- 点的选中的颜色值 -->
        <attr name="dotIndicatorFocus" format="color|reference" />
        <!-- 点的默认的颜色值 -->
        <attr name="dotIndicatorNormal" format="color|reference" />
        <!-- 点的大小 -->
        <attr name="dotSize" format="dimension" />
        <!-- 点的间距 -->
        <attr name="dotDistance" format="dimension" />
        <!-- 点的位置 -->
        <attr name="dotGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="left" value="-1" />
        </attr>
        <!-- 底部的颜色 -->
        <attr name="bottomColor" format="color" />
        <!-- 定义宽高比 -->
        <attr name="withProportion" format="float" />
        <attr name="heightProportion" format="float" />
    </declare-styleable>


    <!--阴影带三角气泡-->
    <declare-styleable name="AnglePopupLayout">
        <attr name="apl_radius" format="dimension" />
        <attr name="apl_bg_color" format="color" />

        <attr name="apl_stroke_width" format="dimension" />
        <attr name="apl_stroke_color" format="color" />

        <attr name="apl_angle_orientation" format="integer" />
        <attr name="apl_angle_x" format="dimension" />
        <attr name="apl_angle_height" format="dimension" />
        <attr name="apl_angle_width" format="dimension" />

        <attr name="apl_shadow_blur" format="dimension" />
        <attr name="apl_shadow_dx" format="dimension" />
        <attr name="apl_shadow_dy" format="dimension" />
        <attr name="apl_shadow_color" format="color" />

    </declare-styleable>


</resources>