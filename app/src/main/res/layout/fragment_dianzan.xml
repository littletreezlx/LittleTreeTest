<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.example.littletreetest.pages.jingtu.view.LikeView
        android:id="@+id/view_like"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        app:checkedColor="#ffff0000"
        app:cirRadius="20dp"
        app:cycleTime="10000"
        app:unSelectCycleTime="300"
        app:defaultColor="#ffcccccc"/>


    <com.example.littletreetest.pages.jingtu.DianzanView
        android:id="@+id/view_dianzan"
        android:layout_width="200dp"
        android:background="#000000"
        android:layout_height="400dp"
        android:layout_gravity="center">

    </com.example.littletreetest.pages.jingtu.DianzanView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_restore_dianzan"
        android:text="restore_dianzan"
        android:layout_gravity="bottom"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_restore_like"
        android:text="restore_like"
        android:layout_gravity="bottom|right"/>

</FrameLayout>
